@using Movie_Project.Models;
@model IEnumerable<Movie_Project.Models.Movie>;


@{
    ViewData["Title"] = "Search Result";
}

<div id="content" class="site-content">
    <div id="primary" class="content-area column full">
        <main id="main" class="site-main">
            <div class="grid portfoliogrid">
                @foreach (var item in Model)
                {
                    <article class="hentry">
                        <header class="entry-header">
                            <div class="entry-thumbnail">
                                <a asp-action="Details" asp-route-id="@item.MovieId">
                                    @*href="/Movie/Details/@item.MovieId*@
                                    <img src="~/Img/@item.Image" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="p1">
                                </a>
                                <h2 class="entry-title">
                                    <a asp-action="Details" asp-route-id="@item.MovieId" rel="bookmark">@item.Title</a>
                                </h2>

                            </div>

                        </header>
                    </article>
                }

            </div>
            <!-- .grid -->
            @*
            <nav class="pagination">
            <span class="page-numbers current">1</span>
            <a class="page-numbers" href="#">2</a>
            <a class="next page-numbers" href="#">Next »</a>
            </nav>*@
            <br />

        </main>
        <!-- #main -->
    </div>
    <!-- #primary -->
</div>
<!-- #content -->

<script src='~/js/jquery.js'></script>
<script src='~/js/plugins.js'></script>
<script src='~/js/scripts.js'></script>
<script src='~/js/masonry.pkgd.min.js'></script>
<script src='~/js/validate.js'></script>
